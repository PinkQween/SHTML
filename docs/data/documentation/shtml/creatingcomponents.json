       }","    }","}"],"syntax":"swift","type":"codeListing"},{"text":"Lists and Loops","anchor":"Lists-and-Loops","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Use Swift’s "},{"code":"for","type":"codeVoice"},{"type":"text","text":" loops to generate repeated content:"}],"type":"paragraph"},{"code":["struct TodoList: HTML {","    let items: [String]","    ","    var content: some HTML {","        ul {","            for item in items {","                li { item }","                    .padding(\"8px\")","            }","        }","    }","}"],"syntax":"swift","type":"codeListing"},{"text":"Component Groups","anchor":"Component-Groups","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Use "},{"code":"Group","type":"codeVoice"},{"type":"text","text":" to return multiple root elements:"}],"type":"paragraph"},{"code":["struct Navigation: HTML {","    var content: some HTML {","        Group {","            nav {","                HStack(spacing: \"20px\") {","                    a { \"Home\" }.href(\"\/\")","                    a { \"About\" }.href(\"\/about\")","                    a { \"Contact\" }.href(\"\/contact\")","                }","            }","            ","            Div { \"Divider\" }","                .frame(height: \"1px\")","                .background(\"#ddd\")","        }","    }","}"],"syntax":"swift","type":"codeListing"},{"text":"Reusable Styles","anchor":"Reusable-Styles","level":2,"type":"heading"},{"inlineContent":[{"type":"text","text":"Create components that encapsulate styling:"}],"type":"paragraph"},{"code":["struct PrimaryButton: HTML {","    let text: String","    let action: String","    ","    var content: some HTML {","        button { text }","            .padding(\"12px 24px\")","            .background(\"linear-gradient(135deg, #667eea 0%, #764ba2 100%)\")","            .foregroundColor(\"white\")","            .border(width: \"0\")","            .cornerRadius(\"8px\")","            .